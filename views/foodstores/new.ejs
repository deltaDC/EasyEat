<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New FoodStore</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/foodstores" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="foodstore[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="foodstore[location]" required>
            </div>

            <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="foodstore[image]" required>
                </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">FoodStore Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="foodstore[price]" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="foodstore[description]"
                    required></textarea>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add images</label>
                <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add FoodStore</button>
            </div>
        </form>
        <a href="/foodstores">All FoodStores</a>
    </div>
</div>